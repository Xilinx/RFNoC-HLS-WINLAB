<!--This defines one NoC-Block.-->
<nocblock>
  <name>SpectrumSpreader</name>
  <blockname>Spreader</blockname>
  <!--There can be several of these:-->
  <ids>
    <id revision="0">FFFFC000</id>
  </ids>
  <!-- Registers -->
  <registers>
    <!--Note: AXI config bus uses 129 & 130-->
    <setreg>
      <name>BLOCK_RESET</name>
      <address>131</address>
    </setreg>
    <setreg>
      <name>GEN_SEED_POLY</name>
      <address>132</address>
    </setreg>
    <setreg>
      <name>GEN_ORDER_LEN</name>
      <address>133</address>
    </setreg>
    <readback>
      <name>RB_BLOCK_RESET</name>
      <address>0</address>
    </readback>
  </registers>
  <!--All the connections to the outside world are listed in 'ports':-->
  <ports>
    <sink>
      <name>in</name>
      <type>sc16</type>
    </sink>
    <source>
      <name>out</name>
      <type>sc16</type> 
    </source>
  </ports>
</nocblock>
